<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeNavigation"
    android:background="@drawable/bgtest5"
    android:layout_gravity="center"
    android:padding="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="home"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_gravity="center" />

        <FrameLayout
            android:id="@+id/flMinus10"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="200dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/profile_white"
                android:layout_gravity="center"
                android:onClick="profile" />

            <TextView
                android:layout_marginTop="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="Profile "
                android:onClick="profile"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </FrameLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tvWelcomeUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="welcome, name"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="15dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:elevation="5dp"
        app:cardCornerRadius="8dp"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tv_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="stats"
                android:textSize="30sp"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:id="@+id/tvHPTotalWrkouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="total workouts today: "
                android:textSize="20sp"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="7.5dp"
                />

            <TextView
                android:id="@+id/tvHPTotalWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="total weight lifted today: "
                android:textSize="20sp"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="7.5dp"
                />
            <TextView
                android:id="@+id/tvHPTotalReps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="total reps today: "
                android:textSize="20sp"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="7.5dp" />


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
